{% extends 'layout.njk' %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
        <section class="details">

            <h3>Details</h3>

            <div class="item">
                <div>Teacher</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Age</div>
                <div>{{ teacher.age }}</div>
            </div>

            <div class="item">
                <div>Educational Level</div>
                <div>{{ teacher.level }}</div>
            </div>

            <div class="item">
                <div>Type of Class</div>
                <div>{{ teacher.type_class }}</div>
            </div>

            <div class="item">
                <div>Occupation area</div>
                {% for subject in teacher.subjects %}
                    <span>{{ subject }}</span>
                {% endfor %}
            </div>

            <div class="item">
                <div>Since</div>
                <div>{{ teacher.created_at }}</div>
            </div>

            <a href="#" class="button">Edit</a>

        </section>
    </div>

{% endblock content %}