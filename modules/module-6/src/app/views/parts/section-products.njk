{% macro products(name, classes, products) %}

   <section class="shop {{classes}}">
    
       {% if name %}
       <h2>{{name}}</h2>
       {% endif %}

    <div class="item">

        {% for product in products %}

            <div class="product">
                <div class="image"
                    style="background-image: url('{{product.img if product.img else '//placehold.it/500x360'}}')"
                >
                </div>

                {% if product.oldPrice != product.price %}
                    <div class="old-price">{{product.oldPrice}}</div>
                {% endif %}
                <p>{{product.price}}</p>
                <h4>{{product.name}}</h4>
                
                <a href="/products/{{product.id}}" class="button">See Product</a>             
                </div>

        {% endfor %}

    </div>


</section>


{% endmacro %}