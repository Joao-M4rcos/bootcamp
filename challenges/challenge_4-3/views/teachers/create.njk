{% extends 'layout.njk' %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/54673041/500x500) no-repeat center center / cover"></section>
        <section class="details">

            <h3>Details</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div><input type="text" name="avatar_url" placeholder="http://"></div>
            </div>

            <div class="item">
                <div>Teacher</div>
                <div><input type="text" name="name" placeholder="Teacher Name"></div>
            </div>

            <div class="item">
                <div>Birth Date</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>Educational Level</div>
                <select name="level">
                    <option value="" selected="selected"></option>
                    <option value="complete_high_school">Complete High School</option>
                    <option value="complete_higher_education">Complete Higher Education</option>
                    <option value="master">Master</option>
                    <option value="doctorate">Doctorate</option>
                </select>
            </div>

            <div class="item">
                <div>Type of Class</div>
                <div>
                    <span><input type="radio" name="in_person">In person</span>
                    <span><input type="radio" name="remotely">Remotely</span>
                </div>
            </div>

            <div class="item">
                <div>Occupation area</div>
                <div>
                    <input type="text" name="" list="subjects">
                    <datalist id="subjects">
                        <option>Math</option>
                        <option>Physics</option>
                        <option>English</option>
                        <option>Spanish</option>
                        <option>Biology</option>
                    </datalist>
                </div>
            </div>

            <div class="item"></div>

        </section>
    </div>

{% endblock content %}