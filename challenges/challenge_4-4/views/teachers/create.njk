{% extends 'layout.njk' %}

{% block content %}

    <form class="card" method="POST" action="/teachers">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/54673041/500x500) no-repeat center center / cover"></section>
        <section class="details">

            <h3>Details</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div><input type="text" name="avatar_url" placeholder="http://"></div>
            </div>

            <div class="item">
                <div>Teacher</div>
                <div><input type="text" name="name" placeholder="Teacher Name"></div>
            </div>

            <div class="item">
                <div>Birth Date</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>Educational Level</div>
                <select name="level">
                    <option value="" selected="selected"></option>
                    <option value="high">Complete High School</option>
                    <option value="higher">Complete Higher Education</option>
                    <option value="master">Master</option>
                    <option value="doctorate">Doctorate</option>
                </select>
            </div>

            <div class="item">
                <div>Type of Class</div>
                <div>
                    <span><input type="radio" name="type_class" value="In Person" checked="checked">In person</span>
                    <span><input type="radio" name="type_class" value="Remotely">Remotely</span>
                </div>
            </div>

            <div class="item">
                <div>Occupation area</div>
                <div>
                    <input type="text" name="subjects" list="subjects" placeholder="Separete each occupation by commas">
                    <datalist id="subjects">
                        <option>Math</option>
                        <option>Physics</option>
                        <option>English</option>
                        <option>Spanish</option>
                        <option>Biology</option>
                    </datalist>
                </div>
            </div>

            <button type="submit">Save</button>

        </section>
    </form>

{% endblock content %}