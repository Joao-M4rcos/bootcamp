            <div class="item">
                <div>Avatar URL</div>
                <div><input type="text" name="avatar_url" placeholder="http://"
                value="{{ student.avatar_url }}"></div>
            </div>

            <div class="item">
                <div>Name</div>
                <div><input type="text" name="name"
                value="{{ student.name }}"></div>
            </div>

            <div class="item">
                <div>Email</div>
                <div><input type="email" name="email"
                value="{{ student.email }}"></div>
            </div>

            <div class="item">
                <div>Birth</div>
                <div>
                    <input type="date" name="birth"
                    value="{{ student.birth }}">
                </div>
            </div>

            <div class="item">
                <div>School Year</div>
                <select name="school_year">
                    <option value=""></option>
                    <option value="5rd" {% if student.school_year == "5rd" %}
                    selected="selected"
                    {% endif %}>5th year of elementary school</option>
                    <option value="6rd" {% if student.school_year == "6rd" %}
                    selected="selected"
                    {% endif %}>6th year of elementary school</option>
                    <option value="7rd" {% if student.school_year == "7rd" %}
                    selected="selected"
                    {% endif %}>7th year of elementary school</option>
                    <option value="8rd" {% if student.school_year == "8rd" %}
                    selected="selected"
                    {% endif %}>8th year of elementary school</option>
                    <option value="9rd" {% if student.school_year == "9rd" %}
                    selected="selected"
                    {% endif %}>9th grade of elementary school</option>
                    <option value="1high" {% if student.school_year == "1high" %}
                    selected="selected"
                    {% endif %}>1st year of high school</option>
                    <option value="2high" {% if student.school_year == "2high" %}
                    selected="selected"
                    {% endif %}>2nd year of high school</option>
                    <option value="3high" {% if student.school_year == "3high" %}
                    selected="selected"
                    {% endif %}>3rd year of high school</option>
                </select>
            </div>

            <div class="item">
                <div>Workload</div>
                <div>
                    <input type="number" name="workload" placeholder="Just numbers"
                    value="{{ student.workload }}">
                </div>
            </div>

            <button type="submit">Save</button>